{
  "name": "code-slash",
  "displayName": "Code Slash AI",
  "description": "AI-powered code completion extension for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.107.1"
  },
  "categories": [
    "Machine Learning",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "code-slash.showStatus",
        "title": "Show Code-Slash Status"
      },
      {
        "command": "code-slash.configure",
        "title": "Configure Code-Slash"
      },
      {
        "command": "code-slash.scanImports",
        "title": "Scan for Missing Imports"
      },
      {
        "command": "code-slash.addImport",
        "title": "Add Import Statement"
      },
      {
        "command": "code-slash.explainCode",
        "title": "Explain Selected Code"
      },
      {
        "command": "code-slash.generateDocs",
        "title": "Generate Documentation"
      },
      {
        "command": "code-slash.refactor",
        "title": "Suggest Refactoring"
      },
      {
        "command": "code-slash.enableInlineCompletion",
        "title": "Enable Inline Completion"
      },
      {
        "command": "code-slash.disableInlineCompletion",
        "title": "Disable Inline Completion"
      },
      {
        "command": "code-slash.acceptInlineCompletion",
        "title": "Accept Inline Completion"
      }
    ],
    "keybindings": [
      {
        "command": "code-slash.scanImports",
        "key": "ctrl+shift+i",
        "mac": "cmd+shift+i",
        "when": "editorTextFocus"
      },
      {
        "command": "code-slash.explainCode",
        "key": "ctrl+shift+e",
        "mac": "cmd+shift+e",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "code-slash.generateDocs",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "code-slash.refactor",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus && editorHasSelection"
      },
      {
        "command": "code-slash.acceptInlineCompletion",
        "key": "tab",
        "when": "inlineSuggestionVisible"
      }
    ],
    "inlineCompletionProviders": [
      {
        "id": "code-slash.inlineCompletion",
        "selector": {
          "language": "*"
        }
      }
    ],
    "configuration": {
      "title": "Code Slash AI",
      "properties": {
        "code-slash.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable AI code completion"
        },
        "code-slash.apiProvider": {
          "type": "string",
          "enum": [
            "openai",
            "anthropic",
            "azure",
            "ollama"
          ],
          "default": "ollama",
          "description": "Select AI API provider"
        },
        "code-slash.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI service (openai, anthropic, or azure)"
        },
        "code-slash.apiEndpoint": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "API endpoint URL"
        },
        "code-slash.model": {
          "type": "string",
          "default": "gpt-4",
          "description": "AI model name (e.g., gpt-4, gpt-3.5-turbo, claude-3-sonnet-20240229)"
        },
        "code-slash.maxTokens": {
          "type": "integer",
          "default": 100,
          "minimum": 1,
          "maximum": 4000,
          "description": "Maximum number of tokens for completion"
        },
        "code-slash.temperature": {
          "type": "number",
          "default": 0.7,
          "minimum": 0,
          "maximum": 2,
          "description": "Temperature parameter for AI generation (0-2)"
        },
        "code-slash.autoTrigger": {
          "type": "boolean",
          "default": true,
          "description": "Automatically trigger completion suggestions"
        },
        "code-slash.debounceTime": {
          "type": "integer",
          "default": 300,
          "minimum": 100,
          "maximum": 2000,
          "description": "Debounce time in milliseconds between requests"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && npm run format && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && npm run format && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.ts\" \"docs/**/*.md\"",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "keywords": [
    "ai",
    "code-completion",
    "autocomplete",
    "intellisense",
    "gpt",
    "openai",
    "machine-learning"
  ],
  "bugs": {
    "url": "https://github.com/singularity/code-slash/issues"
  },
  "homepage": "https://github.com/singularity/code-slash#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/singularity/code-slash.git"
  },
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.74.0",
    "openai": "^6.18.0"
  }
}
