{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"rootDir": "src",
		"moduleResolution": "node16",
		"paths": {
			"@/*": ["./*"],
			"@/base/*": ["./base/*"],
			"@/common/*": ["./common/*"],
			"@/providers/*": ["./providers/*"],
			"@/services/*": ["./services/*"]
		},
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
